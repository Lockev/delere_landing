{
  "root": true,
  "extends": ["plugin:astro/recommended"],
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**"
  ],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      }
    },
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser"
    },
    {
      "files": ["**/*.astro/*.js', '*.astro/*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
